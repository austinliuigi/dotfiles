# Austin's zsh aliases

# Defaults

if ! [ -z "$(command -v lsd)" ]; then
    alias ls='lsd'
    alias tree='lsd --tree'
else
    alias ls='ls -F'
fi
alias la='ls -AF'
alias ll='ls -AFl'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Git

alias gs='git status'

# Misc

alias config='[ -d ~/dotfiles ] && cd ~/dotfiles || echo "~/dotfiles does not exist"'
